<nav class="navbar bg-faded">
  <div class="container">
    <ul class="nav navbar-nav pull-sm-left">
      <h4> Welcome {{user}} </h4>
      <a class="nav-link" id="editProfile" href="#">Edit profile</a>
    </ul>
    <form class="form-inline" action="/search" method="GETS">
      <input class="form-control mr-sm-2 abs" type="text" name="search" placeholder="Search" aria-label="Search" required>
      <button class="btn btn-primary my-2 my-sm-0 abs" id="subBtn" type="submit">Search</button>
    </form>
    <ul class="nav navbar-nav pull-sm-right">
      <a href="#" class="btn btn-danger">Logout</a>
    </ul>
  </div>
</nav>
<div class="row searchFilter">
  <div class="dropdown js-dropdown">
    <div class="dropdown-inner dropdown-box">
      <span class="dropdown-value js-dropdown-value">Search by</span>
      <span class="dropdown-icon">&#9662;</span>
    </div>
    <div class="dropdown-options-container js-dropdown-options">
      <div class="dropdown-option dropdown-box js-dropdown-option">Name</div>
      <div class="dropdown-option dropdown-box js-dropdown-option">Skill</div>
      <div class="dropdown-option dropdown-box js-dropdown-option">City</div>
    </div>
  </div>
  <button type="button" class="btn btn-info" id="filterResults">Filter results</button>


</div>
<div class="container allResults">
  {{#each users}}
  <a href="/profile/{{this.username}}">
    <div id="results">
      <div class="searchResults">
        <div class="card">
          <img class="card-img-top" src={{this.avatar}} alt={{this.name}}>
          <div class="card-body">
            <h4 class="card-title">{{this.name}}</h4>
          </a>

            <p class="card-text"><span>@</span>{{this.username}}</p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>
<script type="text/javascript" src="/js/dropdown.js"></script>
